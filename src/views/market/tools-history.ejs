<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/logo/logo.png" type="image/png">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        tanira: {
                            green: '#2F7D32', brown: '#6D4C41', cream: '#F9F7F2', dark: '#1F2937', gray: '#6B7280',
                        }
                    },
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] },
                    boxShadow: { 'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)' }
                }
            }
        }
    </script>
</head>
<body class="bg-tanira-cream text-tanira-dark font-sans min-h-screen pb-24 md:pb-10">

    <nav class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 px-4 py-4">
        <div class="max-w-5xl mx-auto flex items-center justify-between">
            <div class="flex items-center gap-4">
                <a href="/market/tools" class="w-10 h-10 rounded-full hover:bg-gray-100 flex items-center justify-center transition text-tanira-dark">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
                <h1 class="font-bold text-lg leading-none">Riwayat Sewa</h1>
            </div>
        </div>
    </nav>

    <main class="max-w-5xl mx-auto px-4 py-6 space-y-4">

        <% if (bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
            <div class="bg-white rounded-2xl p-4 shadow-sm border border-transparent hover:shadow-md transition">
                <div class="flex justify-between items-start mb-3">
                    <div class="flex gap-3">
                        <div class="w-12 h-12 rounded-lg bg-gray-100 overflow-hidden shrink-0">
                            <img src="<%= booking.tool.imageUrl || 'https://placehold.co/100' %>" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <h3 class="font-bold text-tanira-dark text-sm"><%= booking.tool.toolName %></h3>
                            <p class="text-xs text-gray-500"><%= booking.tool.user.name %></p>
                        </div>
                    </div>
                    <span class="text-[10px] font-bold px-2 py-1 rounded uppercase tracking-wider 
                        <%= booking.status === 'booked' ? 'bg-blue-50 text-blue-600' : (booking.status === 'completed' ? 'bg-green-50 text-green-600' : 'bg-gray-100 text-gray-500') %>">
                        <%= booking.status %>
                    </span>
                </div>

                <div class="flex justify-between items-center text-xs text-gray-500 border-t border-gray-50 pt-3">
                    <p><%= helpers.formatDate(booking.startDate) %> - <%= helpers.formatDate(booking.endDate) %></p>
                    <% if(booking.status === 'booked') { %>
                        <a href="https://wa.me/<%= booking.tool.user.phone %>" target="_blank" class="text-tanira-brown font-bold hover:underline">Hubungi Penyedia</a>
                    <% } %>
                </div>
            </div>
            <% }) %>
        <% } else { %>
            <div class="py-12 text-center">
                <p class="text-gray-400 text-sm">Belum ada riwayat penyewaan.</p>
                <a href="/market/tools" class="inline-block mt-4 text-tanira-brown font-bold text-sm hover:underline">Cari Alat</a>
            </div>
        <% } %>

    </main>

</body>
</html>