<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/logo/logo.png" type="image/png">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        tanira: {
                            green: '#2F7D32', greenLight: '#E8F5E9', brown: '#6D4C41',
                            cream: '#F9F7F2', dark: '#1F2937', gray: '#6B7280',
                        }
                    },
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] },
                    boxShadow: { 'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)' }
                }
            }
        }
    </script>
</head>
<body class="bg-tanira-cream text-tanira-dark font-sans min-h-screen pb-24 md:pb-10">

    <nav class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 px-4 py-4">
        <div class="max-w-3xl mx-auto flex items-center gap-4">
            <a href="/market/tools" class="w-10 h-10 rounded-full hover:bg-gray-100 flex items-center justify-center transition text-tanira-dark">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
            <div>
                <h1 class="font-bold text-lg leading-none">Detail Alat</h1>
                <p class="text-xs text-tanira-gray mt-0.5"><%= tool.category %></p>
            </div>
        </div>
    </nav>

    <main class="max-w-3xl mx-auto px-4 py-6 space-y-6">

        <!-- HEADER -->
        <section class="relative w-full h-64 md:h-80 rounded-2xl overflow-hidden shadow-soft group bg-gray-200">
            <img src="<%= tool.imageUrl || 'https://images.unsplash.com/photo-1590802778336-d760777e436f?q=80&w=600' %>" 
                 class="w-full h-full object-cover" onerror="this.src='https://placehold.co/600x400?text=No+Image'">
            <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-sm text-tanira-brown px-3 py-1.5 rounded-full text-xs font-bold shadow-sm">
                <i class="fa-solid fa-check-circle text-green-500 mr-1"></i> Tersedia
            </div>
        </section>

        <!-- INFO -->
        <section class="bg-white rounded-2xl p-6 shadow-soft border border-gray-50">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <h1 class="text-2xl font-bold text-tanira-dark mb-1"><%= tool.toolName %></h1>
                    <p class="text-sm text-tanira-gray flex items-center gap-1">
                        <i class="fa-solid fa-store text-tanira-brown"></i> <%= tool.user.name %> (Penyedia)
                    </p>
                </div>
                <div class="text-right">
                    <div class="flex items-center gap-1 text-sm font-bold text-orange-400 justify-end">
                        <i class="fa-solid fa-star"></i> 4.9
                    </div>
                    <p class="text-xs text-gray-400">20+ Disewa</p>
                </div>
            </div>

            <div class="space-y-3 mb-6">
                <div class="flex items-start gap-3">
                    <i class="fa-solid fa-location-dot text-gray-400 mt-1"></i>
                    <p class="text-sm text-tanira-gray"><%= tool.location %></p>
                </div>
                <div class="flex items-start gap-3">
                    <i class="fa-solid fa-circle-info text-gray-400 mt-1"></i>
                    <p class="text-sm text-tanira-gray leading-relaxed"><%= tool.description || 'Tidak ada deskripsi.' %></p>
                </div>
            </div>
        </section>

    </main>

    <!-- BOTTOM BAR -->
    <div class="fixed bottom-0 w-full bg-white border-t border-gray-200 p-4 z-50">
        <div class="max-w-3xl mx-auto flex items-center gap-4">
            <div class="hidden md:block">
                <p class="text-xs text-gray-400">Harga Sewa</p>
                <div class="flex items-baseline gap-1">
                    <span class="text-xl font-bold text-tanira-brown"><%= helpers.formatRupiah(tool.pricePerDay) %></span>
                    <span class="text-xs text-gray-500">/ hari</span>
                </div>
            </div>
            
            <a href="/market/tools/order/<%= tool.id %>" class="flex-1 max-w-xl bg-tanira-brown hover:bg-[#5D4037] text-white font-bold py-3.5 px-6 rounded-xl shadow-lg shadow-tanira-brown/30 transition-all transform hover:-translate-y-1 flex items-center justify-center gap-2 group text-center">
                Ajukan
                <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
            </a>
        </div>
    </div>

</body>
</html>