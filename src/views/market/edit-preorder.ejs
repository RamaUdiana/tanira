<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/logo/logo.png" type="image/png">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        tanira: {
                            green: '#2F7D32', greenLight: '#E8F5E9', greenDark: '#1B5E20',
                            brown: '#6D4C41', cream: '#F9F7F2', dark: '#1F2937',
                            gray: '#6B7280', accent: '#F59E0B', surface: '#FFFFFF',
                        }
                    },
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] },
                    boxShadow: { 'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)' }
                }
            }
        }
    </script>

    <style>
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        @keyframes scaleIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }
        .animate-enter { animation: fadeInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
        .delay-100 { animation-delay: 100ms; } .delay-200 { animation-delay: 200ms; } .delay-300 { animation-delay: 300ms; }
        .bg-pattern-disabled { background-color: #F3F4F6; background-image: radial-gradient(#E5E7EB 1px, transparent 1px); background-size: 10px 10px; }
        .form-input:focus { box-shadow: 0 0 0 4px rgba(47, 125, 50, 0.1); }
    </style>
</head>
<body class="bg-tanira-cream text-tanira-dark font-sans min-h-screen pb-24 md:pb-10">

    <!-- NAVIGATION -->
    <nav class="sticky top-0 z-40 bg-white/90 backdrop-blur-md border-b border-gray-100 px-4 py-4">
        <div class="max-w-3xl mx-auto flex items-center gap-4">
            <a href="/market/manage/<%= listing.id %>" class="w-10 h-10 rounded-full hover:bg-gray-100 flex items-center justify-center transition text-tanira-dark">
                <i class="fa-solid fa-xmark"></i>
            </a>
            <div>
                <h1 class="font-bold text-lg leading-none">Edit Pre-Order</h1>
                <p class="text-xs text-tanira-gray mt-0.5"><%= listing.crop.name %></p>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="max-w-3xl mx-auto px-4 py-6 space-y-6">

        <!-- 1. HEADER CONTEXT -->
        <section class="animate-enter">
            <h2 class="text-2xl font-bold text-tanira-dark mb-2">Perbarui Informasi</h2>
            <p class="text-tanira-gray">
                Perubahan informasi (terutama harga) akan langsung terlihat oleh calon pembeli baru.
            </p>
        </section>

        <!-- 2. READ-ONLY CARD (Locked Info) -->
        <section class="animate-enter delay-100">
            <div class="bg-pattern-disabled border border-gray-200 rounded-2xl p-6 relative overflow-hidden opacity-90">
                <!-- Badge Lock -->
                <div class="absolute top-4 right-4 flex items-center gap-1.5 text-gray-400 bg-white/80 backdrop-blur px-3 py-1 rounded-full text-xs font-bold border border-gray-200">
                    <i class="fa-solid fa-lock"></i> Tidak dapat diubah
                </div>

                <h3 class="font-bold text-gray-500 text-sm uppercase tracking-wide mb-4">Informasi Dasar</h3>
                
                <div class="flex gap-4 items-center mb-4">
                    <div class="w-16 h-16 rounded-xl bg-gray-200 overflow-hidden shrink-0 grayscale opacity-80">
                        <img src="<%= imageUrl %>" 
                             alt="<%= listing.crop.name %>" 
                             class="w-full h-full object-cover"
                             onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1590802778336-d760777e436f?q=80&w=200&auto=format&fit=crop';">
                    </div>
                    <div>
                        <h4 class="font-bold text-lg text-gray-700"><%= listing.crop.name %></h4>
                        <p class="text-sm text-gray-500">Lahan: <%= listing.user.farmerProfile ? listing.user.farmerProfile.location : '-' %> (<%= listing.user.farmerProfile ? listing.user.farmerProfile.landArea : 0 %> Ha)</p>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-bold text-gray-400 mb-1">Total Kuota Panen</label>
                        <input type="text" value="<%= listing.quantity.toLocaleString('id-ID') %> Kg" disabled class="w-full bg-white/50 border border-gray-300 rounded-lg px-3 py-2 text-gray-500 font-bold cursor-not-allowed">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-400 mb-1">ID Listing</label>
                        <input type="text" value="#HL-<%= listing.id %>" disabled class="w-full bg-white/50 border border-gray-300 rounded-lg px-3 py-2 text-gray-500 font-bold cursor-not-allowed">
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. EDITABLE FORM -->
        <section class="animate-enter delay-200">
            <form id="editForm" class="bg-white rounded-2xl shadow-soft p-6 space-y-6 border-t-4 border-tanira-green">
                
                <!-- ID Hidden -->
                <input type="hidden" id="listingId" value="<%= listing.id %>">

                <!-- Field: Harga -->
                <div>
                    <label class="block text-sm font-bold text-tanira-dark mb-2">
                        Harga Pre-Order per Kg <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none text-tanira-dark font-bold">
                            Rp
                        </div>
                        <input type="number" id="input-price" value="<%= listing.price %>" class="form-input w-full pl-12 pr-4 py-3 rounded-xl border border-gray-200 focus:border-tanira-green focus:outline-none transition font-bold text-lg text-tanira-dark">
                    </div>
                    <p class="text-xs text-tanira-gray mt-1 flex items-center gap-1">
                        <i class="fa-solid fa-circle-info text-tanira-accent"></i> 
                        Pembeli yang sudah memesan tetap menggunakan harga lama.
                    </p>
                </div>

                <!-- Field: Tanggal Panen -->
                <div>
                    <label class="block text-sm font-bold text-tanira-dark mb-2">
                        Estimasi Waktu Panen
                    </label>
                    <input type="date" id="input-date" value="<%= dateValue %>" class="form-input w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-tanira-green focus:outline-none transition text-tanira-dark">
                </div>

                <!-- Field: Min Order -->
                <div>
                    <label class="block text-sm font-bold text-tanira-dark mb-2">
                        Minimal Pemesanan (Kg)
                    </label>
                    <input type="number" id="input-min" value="<%= listing.minOrder %>" class="form-input w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-tanira-green focus:outline-none transition text-tanira-dark">
                </div>

                <!-- Field: Catatan -->
                <div>
                    <label class="block text-sm font-bold text-tanira-dark mb-2">
                        Catatan Tambahan
                    </label>
                    <textarea id="input-desc" rows="3" class="form-input w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-tanira-green focus:outline-none transition text-sm text-tanira-dark"><%= listing.description || '' %></textarea>
                </div>

            </form>
        </section>

        <!-- 4. WARNING CARD -->
        <section class="animate-enter delay-300">
            <div class="bg-amber-50 border border-amber-200 rounded-xl p-4 flex gap-3 items-start">
                <i class="fa-solid fa-triangle-exclamation text-tanira-accent text-xl mt-0.5"></i>
                <div>
                    <h4 class="font-bold text-tanira-dark text-sm">Penting Diperhatikan</h4>
                    <p class="text-xs text-tanira-gray mt-1 leading-relaxed">
                        Perubahan harga yang terlalu drastis dapat mempengaruhi peringkat penawaran Anda di halaman pencarian pembeli. Pastikan harga tetap kompetitif.
                    </p>
                </div>
            </div>
        </section>

        <!-- 5. CTA BUTTONS -->
        <section class="animate-enter delay-300 pt-2 flex flex-col-reverse md:flex-row gap-4">
            <button onclick="window.location.href='/market/manage/<%= listing.id %>'" class="w-full md:w-1/3 py-3.5 px-6 rounded-xl border border-gray-300 font-bold text-gray-500 hover:bg-gray-50 transition text-center">
                Batal
            </button>
            <button onclick="openModal()" class="w-full md:w-2/3 py-3.5 px-6 rounded-xl bg-tanira-green text-white font-bold shadow-lg shadow-tanira-green/30 hover:bg-tanira-greenDark transition transform hover:-translate-y-0.5">
                Simpan Perubahan
            </button>
        </section>

    </main>

    <!-- CONFIRMATION MODAL -->
    <div id="confirmModal" class="hidden fixed inset-0 z-50 flex items-center justify-center px-4">
        <!-- Backdrop -->
        <div class="absolute inset-0 bg-black/40 backdrop-blur-sm transition-opacity opacity-0" id="modalBackdrop"></div>
        
        <!-- Modal Content -->
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-sm relative z-10 transform scale-95 opacity-0 transition-all duration-300 p-6" id="modalContent">
            
            <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center text-tanira-accent text-xl mb-4 mx-auto">
                <i class="fa-solid fa-pen-to-square"></i>
            </div>
            
            <h3 class="text-xl font-bold text-tanira-dark text-center mb-2">Simpan Perubahan?</h3>
            <p class="text-sm text-center text-tanira-gray mb-6">
                Pastikan data yang Anda ubah sudah benar. Pembeli akan melihat informasi terbaru ini.
            </p>

            <div class="flex flex-col gap-3">
                <button onclick="saveChanges()" class="w-full py-3 rounded-xl bg-tanira-green text-white font-bold hover:bg-tanira-greenDark transition flex justify-center items-center gap-2">
                    <span id="btnText">Ya, Simpan</span>
                </button>
                <button onclick="closeModal()" class="w-full py-3 rounded-xl text-gray-500 font-bold hover:bg-gray-50 transition">
                    Periksa Lagi
                </button>
            </div>
        </div>
    </div>

    <!-- SUCCESS TOAST (Hidden by default) -->
    <div id="toast-success" class="fixed top-4 left-1/2 transform -translate-x-1/2 flex items-center w-full max-w-xs p-4 space-x-4 text-gray-500 bg-white rounded-xl shadow-2xl border border-green-100 hidden z-50 transition-all duration-300 translate-y-[-20px] opacity-0" role="alert">
        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg">
            <i class="fa-solid fa-check"></i>
        </div>
        <div class="ml-3 text-sm font-normal text-tanira-dark">Perubahan berhasil disimpan!</div>
    </div>

    <!-- JAVASCRIPT LOGIC -->
    <script>
        const modal = document.getElementById('confirmModal');
        const backdrop = document.getElementById('modalBackdrop');
        const content = document.getElementById('modalContent');
        const btnText = document.getElementById('btnText');
        const listingId = document.getElementById('listingId').value;

        function openModal() {
            modal.classList.remove('hidden');
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                content.classList.remove('scale-95', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeModal() {
            backdrop.classList.add('opacity-0');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');
            setTimeout(() => { modal.classList.add('hidden'); }, 300);
        }

        function showToast() {
            const toast = document.getElementById('toast-success');
            toast.classList.remove('hidden');
            // Allow display:block to apply then animate
            requestAnimationFrame(() => {
                toast.classList.remove('translate-y-[-20px]', 'opacity-0');
            });
            
            // Hide after 3 seconds
            setTimeout(() => {
                toast.classList.add('translate-y-[-20px]', 'opacity-0');
                setTimeout(() => toast.classList.add('hidden'), 300);
            }, 3000);
        }

        async function saveChanges() {
            // UI Loading
            const btn = document.querySelector('button[onclick="saveChanges()"]');
            btn.classList.add('opacity-75', 'cursor-not-allowed');
            btn.disabled = true;
            btnText.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> Menyimpan...';
            
            // Collect Data
            const data = {
                price: document.getElementById('input-price').value,
                harvestDate: document.getElementById('input-date').value,
                minOrder: document.getElementById('input-min').value,
                description: document.getElementById('input-desc').value
            };

            try {
                // Send Request
                const response = await fetch('/market/edit/' + listingId, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    closeModal();
                    showToast();
                    
                    // Redirect after toast shows a bit
                    setTimeout(() => {
                        window.location.href = result.redirectUrl;
                    }, 1500);
                } else {
                    alert('Gagal: ' + result.message);
                    closeModal();
                    btnText.innerHTML = 'Ya, Simpan';
                    btn.classList.remove('opacity-75', 'cursor-not-allowed');
                    btn.disabled = false;
                }
            } catch (error) {
                console.error(error);
                alert('Terjadi kesalahan koneksi.');
                closeModal();
                btnText.innerHTML = 'Ya, Simpan';
                btn.classList.remove('opacity-75', 'cursor-not-allowed');
                btn.disabled = false;
            }
        }
    </script>
</body>
</html>