<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/logo/logo.png" type="image/png">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        tanira: {
                            green: '#2F7D32',      /* Primary Green */
                            greenLight: '#E8F5E9',
                            brown: '#6D4C41',      /* Earth Brown */
                            cream: '#F9F7F2',      /* Background */
                            dark: '#1F2937',       /* Text Main */
                            gray: '#6B7280',       /* Text Secondary */
                        }
                    },
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] },
                    boxShadow: { 'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)' }
                }
            }
        }
    </script>
</head>
<body class="bg-tanira-cream text-tanira-dark font-sans min-h-screen pb-24 md:pb-10">

    <nav class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 px-4 py-4">
        <div class="max-w-2xl mx-auto flex items-center gap-4">
            <a href="/market/tools/<%= tool.id %>" class="w-10 h-10 rounded-full hover:bg-gray-100 flex items-center justify-center transition text-tanira-dark">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
            <div>
                <h1 class="font-bold text-lg leading-none">Ajukan</h1>
                <p class="text-xs text-tanira-gray mt-0.5"><%= tool.toolName %></p>
            </div>
        </div>
    </nav>

    <main class="max-w-2xl mx-auto px-4 py-6 space-y-6">

        <!-- PRODUCT SUMMARY -->
        <section class="bg-white rounded-2xl p-4 shadow-soft flex items-center gap-4 border border-gray-50">
            <div class="w-16 h-16 rounded-xl bg-gray-100 overflow-hidden shrink-0">
                <img src="<%= tool.imageUrl || 'https://placehold.co/200' %>" class="w-full h-full object-cover">
            </div>
            <div>
                <h3 class="font-bold text-tanira-dark text-sm"><%= tool.toolName %></h3>
                <p class="text-xs text-tanira-gray mb-1"><%= tool.location %></p>
                <p class="text-sm font-bold text-tanira-brown"><%= helpers.formatRupiah(tool.pricePerDay) %> <span class="text-xs font-normal text-gray-400">/hari</span></p>
            </div>
        </section>

        <!-- FORM -->
        <section class="bg-white rounded-2xl p-6 shadow-soft space-y-6">
            <input type="hidden" id="toolId" value="<%= tool.id %>">
            <input type="hidden" id="pricePerDay" value="<%= tool.pricePerDay %>">

            <div>
                <label class="block text-sm font-bold text-tanira-dark mb-2">Tanggal Mulai Sewa</label>
                <input type="date" id="inputDate" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:outline-none focus:border-tanira-brown transition text-tanira-dark bg-gray-50 cursor-pointer" onchange="calculateTotal()">
            </div>

            <div>
                <label class="block text-sm font-bold text-tanira-dark mb-2">Durasi (Hari)</label>
                <div class="flex items-center gap-4">
                    <button onclick="adjustDuration(-1)" class="w-10 h-10 rounded-lg bg-gray-100 hover:bg-gray-200 flex items-center justify-center font-bold text-gray-600">-</button>
                    <input type="number" id="inputDuration" value="1" min="1" class="w-20 text-center font-bold text-lg bg-transparent border-none focus:ring-0" readonly>
                    <button onclick="adjustDuration(1)" class="w-10 h-10 rounded-lg bg-tanira-brown text-white hover:bg-[#5D4037] flex items-center justify-center font-bold shadow-md">+</button>
                </div>
            </div>

            <div class="border-t border-dashed border-gray-200 pt-4 mt-4">
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-500">Estimasi Total</span>
                    <span class="text-2xl font-bold text-tanira-brown" id="totalPrice"><%= helpers.formatRupiah(tool.pricePerDay) %></span>
                </div>
            </div>
        </section>

        <button onclick="submitRequest()" id="btn-submit" class="w-full bg-tanira-brown hover:bg-[#5D4037] text-white font-bold py-4 rounded-xl shadow-lg transition-all transform hover:-translate-y-1">
            Kirim Permintaan
        </button>

    </main>

    <!-- TOAST NOTIFICATION -->
    <div id="toast" class="fixed top-4 left-1/2 transform -translate-x-1/2 flex items-center w-full max-w-xs p-4 space-x-4 bg-white rounded-xl shadow-2xl border hidden z-50 transition-all duration-300 translate-y-[-20px] opacity-0" role="alert">
        <div id="toast-icon" class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg"></div>
        <div class="ml-3 text-sm font-normal text-tanira-dark" id="toast-message"></div>
    </div>

    <script>
        const pricePerDay = parseFloat(document.getElementById('pricePerDay').value);
        const formatIDR = (num) => new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', maximumFractionDigits: 0 }).format(num);

        // --- TOAST FUNCTION ---
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const icon = document.getElementById('toast-icon');
            const msg = document.getElementById('toast-message');

            // Set Content
            msg.innerText = message;
            
            if (type === 'success') {
                toast.classList.add('border-green-100');
                icon.className = "inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg";
                icon.innerHTML = '<i class="fa-solid fa-check"></i>';
            } else {
                toast.classList.add('border-red-100');
                icon.className = "inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg";
                icon.innerHTML = '<i class="fa-solid fa-circle-xmark"></i>';
            }

            // Show Animation
            toast.classList.remove('hidden');
            requestAnimationFrame(() => {
                toast.classList.remove('translate-y-[-20px]', 'opacity-0');
            });
            
            // Hide after 3s
            setTimeout(() => {
                toast.classList.add('translate-y-[-20px]', 'opacity-0');
                setTimeout(() => toast.classList.add('hidden'), 300);
            }, 3000);
        }

        function adjustDuration(amount) {
            const input = document.getElementById('inputDuration');
            let val = parseInt(input.value) || 1;
            val += amount;
            if (val < 1) val = 1;
            input.value = val;
            calculateTotal();
        }

        function calculateTotal() {
            const days = parseInt(document.getElementById('inputDuration').value);
            const total = days * pricePerDay;
            document.getElementById('totalPrice').innerText = formatIDR(total);
        }

        // Submit Logic
        async function submitRequest() {
            const btn = document.getElementById('btn-submit');
            const date = document.getElementById('inputDate').value;
            const originalContent = btn.innerHTML;
            
            if (!date) {
                showToast('Pilih tanggal mulai sewa', 'error');
                return;
            }

            // Loading State
            btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> Memproses...';
            btn.disabled = true;
            btn.classList.add('opacity-80', 'cursor-not-allowed');
            
            try {
                const res = await fetch('/market/tools/order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        toolId: document.getElementById('toolId').value,
                        startDate: date,
                        duration: document.getElementById('inputDuration').value
                    })
                });
                
                const data = await res.json();
                if(data.success) {
                    showToast("Permintaan Terkirim! Segera dikonfirmasi penyedia.", "success");
                    // Redirect after short delay
                    setTimeout(() => {
                        window.location.href = data.redirectUrl;
                    }, 1500);
                } else {
                    showToast('Gagal: ' + data.message, 'error');
                    // Reset Button
                    btn.disabled = false;
                    btn.innerHTML = originalContent;
                    btn.classList.remove('opacity-80', 'cursor-not-allowed');
                }
            } catch (e) {
                console.error(e);
                showToast('Terjadi kesalahan koneksi', 'error');
                btn.disabled = false;
                btn.innerHTML = originalContent;
                btn.classList.remove('opacity-80', 'cursor-not-allowed');
            }
        }

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            // Set min date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('inputDate').min = today;
            document.getElementById('inputDate').value = today;
        });
    </script>
</body>
</html>