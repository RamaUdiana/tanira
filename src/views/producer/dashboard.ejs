                    <div>
                        <p class="text-xs text-gray-400 uppercase tracking-wider font-bold mb-1">Status Toko</p>
                        <h3 class="text-xl font-bold text-tanira-green mt-1"><%= stats.storeStatus %></h3>
                        <p class="text-xs text-gray-400 mt-1">Tutup otomatis jam 17:00</p>
                    </div>
                    <div class="w-12 h-12 rounded-full bg-green-50 flex items-center justify-center text-tanira-green text-xl">
                        <i class="fa-solid fa-store"></i>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. CTA UTAMA: ADD TOOL -->
        <section class="animate-enter delay-300" id="tour-add-tool">
            <div class="bg-white rounded-2xl shadow-soft border-l-4 border-tanira-accent p-6 flex flex-col md:flex-row items-center justify-between gap-6 group hover:border-tanira-green transition-colors duration-300">
                <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-tanira-cream rounded-xl flex items-center justify-center text-tanira-brown text-2xl shrink-0 group-hover:bg-tanira-brown group-hover:text-white transition">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                    <div>
                        <h2 class="text-lg font-bold text-tanira-dark">Tambahkan Alat atau Produk</h2>
                        <p class="text-sm text-tanira-gray max-w-md">
