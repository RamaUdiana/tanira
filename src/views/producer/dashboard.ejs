                    <div>
                        <p class="text-xs text-gray-400 uppercase tracking-wider font-bold mb-1">Sewa Berjalan</p>
                        <h3 class="text-3xl font-bold text-tanira-dark"><%= stats.requests %></h3>
                        <p class="text-xs text-tanira-accent mt-1 font-medium"><i class="fa-solid fa-clock mr-1"></i>Perlu dipantau</p>
                    </div>
                    <div class="w-12 h-12 rounded-full bg-amber-50 flex items-center justify-center text-tanira-accent text-xl">
                        <i class="fa-solid fa-user-clock"></i>
                    </div>
                </div>

                <!-- Card 3: Status -->
