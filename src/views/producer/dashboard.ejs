            <a href="/producer/requests" class="flex flex-col items-center gap-1 text-gray-400 group hover:text-tanira-brown transition" id="nav-requests-mobile">
                <div class="w-10 h-8 flex items-center justify-center transition-all group-hover:-translate-y-1">
                    <i class="fa-solid fa-clipboard-list text-lg"></i>
                </div>
                <span class="text-[10px] font-medium">Pesanan</span>
            </a>
            
            <!-- Nav Item: Alat Saya (UPDATE ID) -->
            <a href="/producer/my-tools" class="flex flex-col items-center gap-1 text-gray-400 group hover:text-tanira-brown transition" id="nav-tools-mobile">
                <div class="w-10 h-8 flex items-center justify-center transition-all group-hover:-translate-y-1">
                    <i class="fa-solid fa-layer-group text-lg"></i>
                </div>
                <span class="text-[10px] font-medium">Alat</span>
            </a>
        </div>
    </div>

    <!-- DRIVER.JS & TOUR SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/driver.js@1.0.1/dist/driver.js.iife.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Cek URL parameter ?tutorial=true
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('tutorial') === 'true') {
                startTutorial();
            }
        });

        function toggleNotif(type) {
            const dropdown = document.getElementById(type === 'desktop' ? 'notif-dropdown-desktop' : 'notif-dropdown-mobile');
            if (dropdown.classList.contains('dropdown-closed')) {
                dropdown.classList.remove('dropdown-closed');
                dropdown.classList.add('dropdown-open');
            } else {
                dropdown.classList.add('dropdown-closed');
                dropdown.classList.remove('dropdown-open');
            }
        }

        function closeAllDropdowns(e) {
            const dtBtn = document.getElementById('notif-btn-desktop');
            const mbBtn = document.getElementById('notif-btn-mobile');
            const dtDrop = document.getElementById('notif-dropdown-desktop');
            const mbDrop = document.getElementById('notif-dropdown-mobile');

            if (dtBtn && dtDrop && !dtBtn.contains(e.target) && !dtDrop.contains(e.target)) {
                dtDrop.classList.add('dropdown-closed');
                dtDrop.classList.remove('dropdown-open');
            }
            if (mbBtn && mbDrop && !mbBtn.contains(e.target) && !mbDrop.contains(e.target)) {
                mbDrop.classList.add('dropdown-closed');
                mbDrop.classList.remove('dropdown-open');
            }
        }

        function startTutorial() {
            const driver = window.driver.js.driver;
            
            const driverObj = driver({
                showProgress: true,
                animate: true,
                doneBtnText: 'Selesai',
                closeBtnText: 'Lewati',
                nextBtnText: 'Lanjut',
                prevBtnText: 'Kembali',
                popoverClass: 'driverjs-theme',
                stageBackground: '#ffffff',
                opacity: 0.7,
                steps: [
                    { 
                        element: '#tour-welcome', 
                        popover: { 
                            title: 'Halo Mitra!', 
                            description: 'Ini adalah pusat kontrol usaha Anda. Pantau kinerja penyewaan alat dan status toko di sini.',
                            side: "bottom", align: 'start'
                        } 
                    },
                    { 
                        element: '#tour-insights', 
                        popover: { 
                            title: 'Statistik Harian', 
                            description: 'Lihat ringkasan alat yang aktif, permintaan sewa yang perlu diproses, dan status toko Anda.',
                            side: "top", align: 'start'
                        } 
                    },
                    { 
                        element: '#tour-add-tool', 
                        popover: { 
                            title: 'Tambah Produk & Alat', 
                            description: 'Tambahkan alat pertanian atau produk (pupuk/bibit) untuk disewakan atau dijual kepada petani.',
                            side: "top", align: 'center'
                        } 
                    },
                    { 
                        element: '#tour-recent-tools', 
                        popover: { 
                            title: 'Inventaris Anda', 
                            description: 'Daftar alat yang baru saja Anda tambahkan akan muncul di sini untuk akses cepat.',
                            side: "top", align: 'start'
                        } 
                    },
                    { 
                        element: window.innerWidth < 768 ? '#nav-requests-mobile' : '#nav-requests-desktop', 
                        popover: { 
                            title: 'Kelola Pesanan', 
                            description: 'Cek menu Pesanan Masuk untuk menerima atau menolak permintaan sewa dari petani.',
                            side: "top", align: 'center'
                        } 
                    },
                    { 
                        element: window.innerWidth < 768 ? '#nav-tools-mobile' : '#nav-tools-desktop', 
                        popover: { 
                            title: 'Daftar Alat', 
                            description: 'Kelola daftar alat dan produk yang Anda tawarkan kepada petani.',
                            side: "top", align: 'center'
                        } 
                    },
                    { 
                        element: window.innerWidth < 768 ? '#nav-market-mobile' : '#nav-market-desktop', 
                        popover: { 
                            title: 'Pasar Panen', 
                            description: 'Akses Marketplace Panen untuk membeli hasil bumi langsung dari petani atau melihat permintaan pasar.',
                            side: "top", align: 'center'
                        } 
                    }
                ],
                onDestroyStarted: () => {
                    const url = new URL(window.location);
                    url.searchParams.delete('tutorial');
                    window.history.replaceState({}, '', url);
                    driverObj.destroy();
                }
            });

            setTimeout(() => {
                driverObj.drive();
            }, 1000);
        }
