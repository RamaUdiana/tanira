<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/logo/logo.png" type="image/png">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        tanira: {
                            green: '#2F7D32',
                            brown: '#6D4C41',
                            cream: '#F9F7F2',
                            dark: '#1F2937',
                            gray: '#6B7280',
                        }
                    },
                    fontFamily: { sans: ['Plus Jakarta Sans', 'sans-serif'] },
                    boxShadow: { 'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)' }
                }
            }
        }
    </script>

    <style>
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        .animate-enter { animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; }
        .delay-100 { animation-delay: 100ms; } .delay-200 { animation-delay: 200ms; } .delay-300 { animation-delay: 300ms; }
    </style>
</head>
<body class="bg-tanira-cream text-tanira-dark font-sans min-h-screen pb-24 md:pb-10">

    <!-- NAV -->
    <nav class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-100 px-4 py-4">
        <div class="max-w-3xl mx-auto flex items-center gap-4">
            <a href="/producer/my-tools" class="w-10 h-10 rounded-full hover:bg-gray-100 flex items-center justify-center transition text-tanira-dark">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
            <div>
                <h1 class="font-bold text-lg leading-none">Detail Alat</h1>
                <p class="text-xs text-tanira-gray mt-0.5">#TL-<%= tool.id %></p>
            </div>
        </div>
    </nav>

    <main class="max-w-3xl mx-auto px-4 py-6 space-y-6">

        <!-- 1. HEADER IMAGE -->
        <section class="animate-enter relative w-full h-64 md:h-80 rounded-2xl overflow-hidden shadow-soft group bg-gray-200">
            <img src="<%= tool.imageUrl || 'https://images.unsplash.com/photo-1590802778336-d760777e436f?q=80&w=600' %>" 
                 class="w-full h-full object-cover"
                 onerror="this.src='https://placehold.co/600x400?text=No+Image'">
            
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur text-tanira-brown px-3 py-1.5 rounded-full text-xs font-bold shadow-sm uppercase tracking-wide">
                <%= tool.category %>
            </div>

            <div class="absolute bottom-4 right-4 flex gap-2">
                <a href="/producer/edit-tool/<%= tool.id %>" class="w-10 h-10 bg-white rounded-full flex items-center justify-center text-tanira-dark shadow-lg hover:bg-tanira-brown hover:text-white transition">
                    <i class="fa-solid fa-pen"></i>
                </a>
            </div>
        </section>

        <!-- 2. INFO UTAMA -->
        <section class="animate-enter delay-100 bg-white rounded-2xl p-6 shadow-soft border border-gray-50">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <h1 class="text-2xl font-bold text-tanira-dark mb-1"><%= tool.toolName %></h1>
                    <p class="text-sm text-tanira-gray flex items-center gap-1">
                        <i class="fa-solid fa-location-dot text-tanira-brown"></i> <%= tool.location %>
                    </p>
                </div>
                <div class="text-right">
                    <p class="text-xs text-gray-400 font-bold uppercase mb-1">Status</p>
                    <% if(tool.availability) { %>
                        <span id="status-badge" class="bg-green-100 text-tanira-green px-3 py-1 rounded-full text-xs font-bold">Tersedia</span>
                    <% } else { %>
                        <span id="status-badge" class="bg-gray-100 text-gray-500 px-3 py-1 rounded-full text-xs font-bold">Non-Aktif</span>
                    <% } %>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4 py-4 border-t border-b border-gray-100">
                <div>
                    <p class="text-xs text-gray-400 mb-1">Harga Sewa</p>
                    <p class="text-lg font-bold text-tanira-brown"><%= helpers.formatRupiah(tool.pricePerDay) %> <span class="text-xs text-gray-400 font-normal">/hari</span></p>
                </div>
                <div>
                    <p class="text-xs text-gray-400 mb-1">Total Disewa</p>
                    <p class="text-lg font-bold text-tanira-dark"><%= tool.bookings ? tool.bookings.length : 0 %> Kali</p>
                </div>
            </div>

            <div class="mt-4">
                <h3 class="font-bold text-tanira-dark text-sm mb-2">Deskripsi</h3>
                <p class="text-sm text-tanira-gray leading-relaxed">
                    <%= tool.description || 'Belum ada deskripsi.' %>
                </p>
            </div>
        </section>

        <!-- 3. ACTIONS -->
        <section class="animate-enter delay-200 pt-2 flex gap-4">
            <button onclick="toggleVisibility(<%= tool.id %>)" id="btn-toggle" class="flex-1 py-3 px-4 bg-white border border-gray-200 text-tanira-gray font-bold rounded-xl hover:bg-gray-50 hover:text-tanira-dark transition flex items-center justify-center gap-2">
                <% if(tool.availability) { %>
                    <i class="fa-solid fa-eye-slash"></i> Sembunyikan
                <% } else { %>
                    <i class="fa-solid fa-eye"></i> Tampilkan
                <% } %>
            </button>
            <a href="/producer/edit-tool/<%= tool.id %>" class="flex-1 py-3 px-4 bg-tanira-brown text-white font-bold rounded-xl hover:bg-[#5D4037] transition flex items-center justify-center gap-2 shadow-lg shadow-tanira-brown/30">
                <i class="fa-solid fa-pen-to-square"></i> Edit Data
            </a>
        </section>

    </main>

    <script>
        async function toggleVisibility(id) {
            const btn = document.getElementById('btn-toggle');
            const badge = document.getElementById('status-badge');
            const isHiding = btn.innerText.includes('Sembunyikan');
            const newStatus = !isHiding; // Jika hiding (true), berarti mau jadi false (non-aktif)

            // Optimistic UI
            if (newStatus) { // Mau aktifkan
                btn.innerHTML = '<i class="fa-solid fa-eye-slash"></i> Sembunyikan';
                badge.className = "bg-green-100 text-tanira-green px-3 py-1 rounded-full text-xs font-bold";
                badge.innerText = "Tersedia";
            } else { // Mau non-aktifkan
                btn.innerHTML = '<i class="fa-solid fa-eye"></i> Tampilkan';
                badge.className = "bg-gray-100 text-gray-500 px-3 py-1 rounded-full text-xs font-bold";
                badge.innerText = "Non-Aktif";
            }

            try {
                await fetch('/producer/tool/toggle/' + id, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ availability: newStatus })
                });
            } catch (err) {
                console.error(err);
                alert('Gagal update status');
                location.reload();
            }
        }
    </script>
</body>
</html>